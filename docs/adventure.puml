@startuml Adventure

class Game
{
    Jugar()
    -tiempoJugado
}
class Enemy
{
    Atacar()
    Perseguir()
    -daño
   
}
class Player
{
    Controlar()
    -puntaje
    -intento
}
class Puntaje{
    Puntaje()
    updateText()
    addScore()
    draw()
}
class GameObject{
    -color
    -tamaño
}

class Key
{
    Acceder()
   
}
class Sword
{
    Atacar()
    -daño
}

class Door 
{
    DejarPasar()
    -tamaño 
    -textura
}
class Sala
{
    -paredes
    -tamaño
    -puertas
    -suelo
    -items
}
class Laberinto
{
    -cantidadSalas
}


